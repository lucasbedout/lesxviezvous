<% unless @posts.blank? %>
	<% @posts.each do |post| %>
		<% unless post.blank? %>
		    $('.postline').append("<%= escape_javascript(render('posts/postline', :post => post)) %>");
		<% end %>
	<% end %>
	$('.postline').attr('last', '<%= @posts.last.id %>')
<% else %>
    	$('#infinite-scroll').detach();
<% end %>