<% @posts.each do |post| %>
    <div class="post-container">
        <div class="post-header">
            <%= image_tag Post.user(post.user_id).picture %>
            <div class="user-text">
                <span class="user-name"><%= Post.user(post.user_id).name %></span>       
                <span class="user-title"><%= Post.user(post.user_id).title %></span>
            </div>
            <span class="user-points"><%= Post.user(post.user_id).points %></span>
            <div class="user-actions">
                <%= link_to '', '#', :class => 'add-user' %>
                <%= link_to '', '#', :class => 'mail-user' %>
            </div>
        </div>
        <div class="post-content">
            <%= post.content %>
        </div>
        <div class="post-footer">
            <div class="votes">
                <%= link_to post.upvotes,  post_vote_path(post.id, :vote => 1), {remote: true, class: 'upvotes btn' } %>
                <%= link_to post.downvotes,  post_vote_path(post.id, :vote => 0), {remote: true, class: 'downvotes btn' } %>
            </div>
            <div class="share">
                <a href="#" class="facebook"></a>
                <a href="#" class="twitter"></a>
                <a href="#" class="google"></a>
                <a href="#" class="favorite"></a>
            </div>
        </div>
  </div>
