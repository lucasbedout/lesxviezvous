<h1>Listing posts</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Upvotes</th>
    <th>Downvotes</th>
    <th>Fakevotes</th>
    <th>User</th>
    <th>Category</th>
    <th>Status</th>
    <th>Source</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.content %></td>
    <td><%= post.upvotes %></td>
    <td><%= post.downvotes %></td>
    <td><%= post.fakevotes %></td>
    <% if post.user_id != 0 %>
        <td><% if User.find_by_uid(post.user_id).blank? %><%= User.find(post.user_id).name %><% else %><%= User.find_by_uid(post.user_id).name %><% end %></td>
    <% else %>
        <td>Anonyme</td>
    <% end %>
    <td><%= Category.find(post.category_id).name %></td>
    <td><%= post.status %></td>
    <td><%= post.source %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
